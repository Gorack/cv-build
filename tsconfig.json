{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "strictNullChecks": false,
        "baseUrl": "./src",
        "paths": {
            "src/*": ["./*"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
